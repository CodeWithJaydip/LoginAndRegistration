@model LoginAndRegistration.Models.ApplicationUser
@{
    ViewData["Title"] = "GetUserDetails";
}

<h1>UserDetails</h1>

<div class="row">
    <div class="col-md-12">
        <form  class="card p-3">
            
            <div class="form-group">
                <label asp-for="Email">Email address</label>
                <input readonly asp-for="Email" class="form-control">
               
            </div>

            <div class="form-group">
                <label asp-for="Name"></label>
                <input  readonly asp-for="Name" class="form-control">
                
            </div>
            <div class="form-group">
                <label asp-for="DOB"></label>
                <input  readonly asp-for="DOB" class="form-control">
                
            </div>
            <div class="form-group">
                <label asp-for="Address"></label>
                <textarea  readonly asp-for="Address" class="form-control"></textarea>
                
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber"></label>
                <input  readonly asp-for="PhoneNumber" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Gender"></label>:
                <input asp-for="Gender" class="form-control" readonly/>
            </div>

            <a asp-action="Index" asp-controller="Home" class="btn btn-primary">Back To Home</a>
           
            
        </form>

    </div>
</div>