@model LoginAndRegistration.ViewModel.CreateRoleViewModel
@{
    ViewData["Title"] = "CreateRole";
}

<h1>CreateRole</h1>

<div class="row">
    <div class="col-md-12">
        <form method="post" class="card p-3">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" placeholder="Enter email">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            

            <button type="submit" style="width:85px" class="btn btn-primary">Register</button>
        </form>

    </div>
</div>


